<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageButton
        android:id="@+id/LocationSearchButton"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginTop="264dp"
        android:background="#00FFFFFF"
        android:src="@android:drawable/ic_menu_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/LocationSearch"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/NameSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:fontFamily="@font/helvetica_rounded_bold"
        android:gravity="center_horizontal"
        android:hint="Name/Title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/LocationSearch"
        android:layout_width="155dp"
        android:layout_height="49dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:ems="10"
        android:fontFamily="@font/helvetica_rounded_bold"
        android:gravity="center_horizontal"
        android:hint="City/State"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameSearch"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/category"
        android:layout_width="129dp"
        android:layout_height="49dp"
        app:layout_constraintEnd_toStartOf="@+id/LocationSearch"
        app:layout_constraintTop_toBottomOf="@+id/NameSearch" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/helvetica_rounded_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="Search"
        android:textColor="#E33219"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/GPSLocationSearch"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginTop="262dp"
        android:background="#00FFFFFF"
        android:src="@android:drawable/ic_menu_mylocation"
        app:layout_constraintEnd_toStartOf="@+id/category"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/NameSearchButton"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginTop="220dp"
        android:background="#00FFFFFF"
        android:src="@android:drawable/ic_menu_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/NameSearch"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/FavoritesButton"
        android:layout_width="290dp"
        android:layout_height="88dp"
        android:layout_marginTop="396dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/helvetica_rounded_bold"
        android:text="Favorites"
        android:textColor="#E33219"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>